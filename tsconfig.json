{
  "compilerOptions": {
    "outDir": "./web/build/",
    "module": "es6",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "dom.iterable"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
